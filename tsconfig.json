{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "test-ui": ["components/index.ts"],
            "test-ui/es/*": ["components/*"],
            "test-ui/lib/*": ["components/*"],
        }
    },
    "include": [
        "components",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}